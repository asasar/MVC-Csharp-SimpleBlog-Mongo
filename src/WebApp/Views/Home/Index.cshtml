@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Mongo c#</h1>
    <p class="lead">Simple Blog MVC C# Mongo</p>
    
</div>

<div class="row">
    <div class="col-md-8">
        <h2>Ultimos Posts</h2>
        @foreach(var post in Model.RecentPosts)
        {
            <h4>@post.Title by @post.Author on @post.CreatedAtUtc</h4>
            <p>@post.Content.Substring(0, Math.Min(post.Content.Length - 1, 100))</p>
            <p><a class="btn btn-default btn-sm" href="@Url.Action("Post", "Home", new { id = post.Id })">Ver &raquo;</a></p>
        }
    </div>
</div>